<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="friendns">
		
	
	<!-- member information save -->
	<insert id="member_join" parameterType="member">
		insert into member (email, pwd, nickname, addr_name, x, y) 
			values(#{email}, #{pwd}, #{nickname}, #{addr_name}, 
					#{x}, #{y})
	</insert>
	
	<!-- member verification -->
	<select id="login_check" parameterType="String" resultType="member">
		select * from member where email=#{email}
	</select>
    
	<!-- member information update -->
	<update id="member_edit" parameterType="member">
		update member set pwd=#{pwd},nickname=#{nickname},
			addr_name=#{addr_name}, x=#{x}, y=#{y}
		where email=#{email}
	</update>
	
	<!-- member deletion -->
	<delete id="member_delete" parameterType="member">
		delete from member where email=#{email}
	</delete>
	
</mapper>
